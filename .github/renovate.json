{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":dependencyDashboardApproval",
    ":semanticCommits",
    ":timezone(Asia/Tokyo)"
  ],
  "schedule": [
    "after 1am and before 5am every weekday"
  ],
  "prCreation": "not-pending",
  "assignees": ["@harumaki4649"],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["@harumaki4649"],
    "schedule": []
  },
  "packageRules": [
    {
      "description": "Prevent automatic Python version updates",
      "matchPackageNames": ["python"],
      "matchManagers": ["github-actions"],
      "enabled": false
    }
  ]
}
