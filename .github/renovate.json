{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(Asia/Tokyo)"
  ],
  "schedule": [
    "before 3am on monday"
  ],
  "automergeStrategy": "squash",
  "packageRules": [
    {
      "description": "Auto-merge minor/patch updates for dev dependencies",
      "matchUpdateTypes": ["minor", "patch"],
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Group all minor/patch updates together",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Require manual approval for major updates",
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Security updates are created immediately",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["pin", "digest", "patch", "minor", "major"],
      "enabled": true,
      "schedule": []
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["@harumaki4649"]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2
}
